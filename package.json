{
  "name": "badminton-tournament-software",
  "version": "1.0.0",
  "description": "Your app description",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build": "pnpm run build:backend && pnpm run build:frontend && electron-builder --win",
    "build:backend": "cd packages/backend && pnpm install && pnpm run build && cd ../..",
    "build:frontend": "cd packages/frontend && pnpm install && pnpm run build && cd ../.."
  },
  "build": {
    "productName": "Badminton Tournament Software",
    "files": [
      "packages/backend/dist/**/*",
      "packages/frontend/dist/**/*",
      "electron.js",
      "installer/node-v20.14.0-x64.msi"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "pkg": "^5.8.1"
  }
}
